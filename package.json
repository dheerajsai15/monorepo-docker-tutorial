{
  "name": "week-27-monorepo-deployment",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "generate:db": "cd packages/db && DATABASE_URL='postgresql://user:password@localhost:5432/db' bunx prisma generate && cd ../..",
    "start:backend": "cd apps/backend && bun run index.ts",
    "start:ws": "cd apps/ws && bun run index.ts",
    "start:web": "cd apps/web && bun run start"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.15",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
